{
    "manifest_version": 3,
    "name": "ShadowGuard AI Monitor",
    "version": "1.0.0",
    "description": "Monitor browsing activity for Shadow AI/IT detection. Helps identify unintentional data exposure risks.",
    "permissions": [
        "webRequest",
        "storage",
        "alarms"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "128": "icons/icon128.png"
        }
    },
    "options_page": "options/options.html",
    "icons": {
        "128": "icons/icon128.png"
    }
}